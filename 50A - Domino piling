#include<bits/stdc++.h>
using namespace std;
#define endl '\n'

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.setf(ios::fixed,ios::floatfield);

    int m, n, ct;
    cin>>m>>n;
    ct = (m*n)/2;
    cout<<ct<<endl;
    return 0;
}
