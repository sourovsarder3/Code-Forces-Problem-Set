#include<bits/stdc++.h>
using namespace std;
#define endl '\n'

bool ispos(int n)
{
    return (n%2==0 && n>2);
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.setf(ios::fixed,ios::floatfield);

    int w;
    cin>>w;
    if(ispos(w))
    {
        cout<<"YES"<<endl;
    }
    else
        cout<<"NO"<<endl;

    return 0;
}
